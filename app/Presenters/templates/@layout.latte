<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

	{if $vite->isEnabled()}
		<script type="module" src="{='@vite/client'|vite}"></script>
		<link rel="stylesheet" href="{='frontend/styles/main.scss'|vite}" media="screen,projection">
	{else}
		<link rel="stylesheet" href="{$basePath}/assets/main.css" media="screen,projection">
	{/if}

	<title>{ifset title}{include title|stripHtml} | {/ifset}Nette Web</title>
</head>

<body>
	{snippetArea wrapper}

		<div class="container">
			<div class="row justify-content-center">
				<div class="col s10">
					<div n:foreach="$flashes as $flash" n:class="'flash card-panel', $flash->type">{$flash->message}</div>
				</div>
			</div>
		</div>

		{include content}

	{/snippetArea}

	{block scripts}
		<script src="https://nette.github.io/resources/js/3/netteForms.min.js"></script>
		<script src="{='frontend/scripts/main.ts'|vite}" type="module"></script>
	{/block}
</body>
</html>
